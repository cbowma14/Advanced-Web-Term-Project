@model TermProject.Models.Workout

<h2>Delete Workout</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this workout?</strong>
</div>

<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Type</dd>

    <dt class="col-sm-2">Exercises</dt>
    <dd class="col-sm-10">
        <ul>
            @foreach (var ex in Model.WorkoutExercises)
            {
                <li>@ex.Exercise.Name</li>
            }
        </ul>
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
