@using Microsoft.AspNetCore.Identity
@using TermProject.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to the Personal Fitness & Workout Tracker!</h1>
    <p class="lead mt-3">
        Track your workouts, monitor your progress, and achieve your fitness goals.
    </p>

    @if (!SignInManager.IsSignedIn(User))
    {
        <div class="mt-4">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg m-2">Login</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary btn-lg m-2">Register</a>
        </div>
    }
    else if (SignInManager.IsSignedIn(User))
    {
        <p class="mt-4">You're logged in as <strong>@User.Identity?.Name</strong></p>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-success mt-2">Go to Dashboard</a>

        <form asp-controller="Account" asp-action="Logout" method="post" class="mt-3">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    }
    
</div>
