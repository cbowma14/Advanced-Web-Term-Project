@model TermProject.Models.Goal
@{
    ViewData["Title"] = "Edit Goal";
}

<h2>Edit Goal</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Deadline"></label>
        <input asp-for="Deadline" class="form-control" type="date" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <div class="form-group form-check mt-2">
        <input asp-for="IsCompleted" class="form-check-input" />
        <label asp-for="IsCompleted" class="form-check-label">Achieved?</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>